---
import Layout from '../layouts/Layout.astro';
import Header from '../components/header/Header.astro';
import About from '../components/about_me/About.astro';
import Services from '@/components/my_services/Services.astro';
import Gallery from '@/components/gallery/Gallery.astro';
import Footer from '@/components/footer/Footer.astro';
---

<Layout title="Katapiercing || Home">
  <header>
    <Header />
  </header>
  <main>
    <section class="+">
      <About />
    </section>
    <section class="dark-section text-white m-auto">
      <div class="m-auto max-w-5xl">
        <Services />
      </div>
    </section>
    <section>
      <Gallery />
    </section>
  </main>
  <Footer />
</Layout>

<style is:global>
  @font-face {
    font-family: 'Open Sans';
    src: url('/fonts/Open_Sans/static/OpenSans_Condensed-Medium.ttf');
  }

  @font-face {
    font-family: 'Alfa Slab One';
    src: url('/fonts/Alfa_Slab_One/AlfaSlabOne-Regular.ttf');
  }

  .dark-section {
    background-color: #242424;
  }
</style>
