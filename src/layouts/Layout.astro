---
import Header from '@/components/header/Header.astro';
import Footer from '@/components/footer/Footer.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>

    <!-- UIKIT -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/uikit@3.21.5/dist/css/uikit.min.css"
    />
  </head>
  <body>
    <header>
      <Header />
    </header>
    <slot name="main" />
    <footer>
      <Footer />
    </footer>
  </body>
  <!-- UIKIT -->
  <script src="https://cdn.jsdelivr.net/npm/uikit@3.21.5/dist/js/uikit.min.js"
  ></script>
  <script
    src="https://cdn.jsdelivr.net/npm/uikit@3.21.5/dist/js/uikit-icons.min.js"
  ></script>
</html>

<style is:global>
  @font-face {
    font-family: 'Open Sans';
    src: url('/fonts/Open_Sans/static/OpenSans_Condensed-Medium.ttf');
  }

  @font-face {
    font-family: 'Alfa Slab One';
    src: url('/fonts/Alfa_Slab_One/AlfaSlabOne-Regular.ttf');
  }

  .dark-section {
    background-color: #242424;
  }

  footer {
    background: rgb(48, 48, 48);
    background: linear-gradient(
      180deg,
      rgba(48, 48, 48, 1) 3%,
      rgba(36, 36, 32, 1) 10%
    );
    box-shadow: 0 0 1.5rem 1.5rem gray;
  }
</style>
