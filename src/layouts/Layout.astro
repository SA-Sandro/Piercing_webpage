---
import Footer from '@/components/footer/Footer.astro';
import WhatsAppButton from '@/components/whatsapp_button/WhatsAppButton.astro';
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <script src="uikit/dist/js/uikit.min.js"></script>
    <script src="uikit/dist/css/uikit.min.css"></script>
    <ViewTransitions />
  </head>
  <body>
    <slot name="header" />
    <slot name="main" />
    <WhatsAppButton />
    <footer>
      <Footer />
    </footer>

    <style is:global>
      @font-face {
        font-family: 'Open Sans';
        src: url('/fonts/Open_Sans/static/OpenSans_Condensed-Medium.ttf');
        font-display: fallback;
      }
      @font-face {
        font-family: 'Alfa Slab One';
        src: url('/fonts/Alfa_Slab_One/AlfaSlabOne-Regular.ttf');
        font-display: fallback;
      }

      html {
        scroll-behavior: smooth;
      }
      .dark-section {
        background-color: #242424;
      }

      footer {
        background: rgb(48, 48, 48);
        background: linear-gradient(
          180deg,
          rgba(48, 48, 48, 1) 3%,
          rgba(36, 36, 32, 1) 10%
        );
      }
    </style>
  </body>
</html>
