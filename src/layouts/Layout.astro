---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: 'Open Sans';
    src: url('/fonts/Open_Sans/static/OpenSans_Condensed-Medium.ttf');
  }

  @font-face {
    font-family: 'Alfa Slab One';
    src: url('/fonts/Alfa_Slab_One/AlfaSlabOne-Regular.ttf');
  }

  .dark-section {
    background-color: #242424;
  }
</style>
