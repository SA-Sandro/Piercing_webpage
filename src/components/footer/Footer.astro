---
import './footer.css';
import Image from '@/components/my_images/Image.astro';
import logo from 'public/img/logo_provisional.png';
import Instagram from '@/components/my_icons/Instagram.astro';
import Tiktok from '@/components/my_icons/Tiktok.astro';
import Location from '@/components/my_icons/Location.astro';
import Phone from '@/components/my_icons/Phone.astro';
import Mail from '@/components/my_icons/Mail.astro';
---

<div class="m-auto max-w-5xl">
  <section class="flex justify-center p-4">
    <div class="p-3 flex items-center justify-center flex-col sm:flex-row">
      <div class="flex justify-center">
        <Image src={logo.src} alt="logotipo" width={150} height={100} />
      </div>
      <div class="social-media flex-col">
        <div class="rounded-full mx-2 cursor-pointer">
          <a
            class="flex items-center text-white hover:no-underline hover:text-[#d5b981] transition-colors"
            href="#"><Instagram /><span class="ml-1">@Katapiercing</span></a
          >
        </div>
        <div class="rounded-full mx-2 cursor-pointer my-2">
          <a
            class="flex items-center text-white hover:no-underline hover:text-[#d5b981]"
            href="#"><Tiktok /><span class="ml-1">@Katapiercing</span></a
          >
        </div>
      </div>
    </div>
  </section>
  <hr class="divide-line" />
  <section class="">
    <div class="mt-3">
      <div
        class="mt-3 flex justify-around items-center flex-col sm:flex-row mx-auto"
      >
        <div class="contact-inf mx-3">
          <Location>
            <p slot="text-icon">C. Arturo Galdós nº23, Cádiz</p>
          </Location>
          <Mail>
            <p slot="text-icon">arturito@gmail.com</p>
          </Mail>
          <Phone>
            <p slot="text-icon">876 87 8 7 65</p>
          </Phone>
        </div>
        <div class="map-container m-3">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m23!1m12!1m3!1d1519.8373357678247!2d-4.41848856768086!3d36.72485927322566!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!4m8!3e6!4m0!4m5!1s0xd72f7a8e990f5c1%3A0xde8d0b5e571ebc91!2sC.%20Frailes%2C%2012%2C%202B%2C%20Distrito%20Centro%2C%2029012%20M%C3%A1laga!3m2!1d36.7249744!2d-4.4177848!5e1!3m2!1ses!2ses!4v1720447463765!5m2!1ses!2ses"
            width={400}
            height={350}
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
      </div>
    </div>
    <div
      class="copy-size text-center p-4 bg-dark text-white flex items-center justify-center"
    >
      © 2024 Copyright: Sandro Suárez Aranda
      <a
        href="https://www.linkedin.com/in/sandro-su%C3%A1rez-aranda-76539a1b7/"
        target="_blank"
      >
        <Image
          src="img/linkedin_logo.png"
          alt="logo de linkedin"
          width={25}
          class="mx-2"
        />
      </a>
    </div>
  </section>
</div>
